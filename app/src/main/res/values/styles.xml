<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Main menu buttons-->
    <style name="MainMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/YPwhite</item>
        <item name="android:textColor">@color/YPblack</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YPblack</item>
        <item name="iconEndPadding">8dp</item>
    </style>
    <!--Settings text menu left-->
    <style name="SettingMenuTetL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/YPblack</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--Settings img.button right-->
    <style name="SettingMenuButtonR">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginVertical">19dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
</resources>