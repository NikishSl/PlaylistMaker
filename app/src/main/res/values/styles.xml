<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Main menu buttons-->
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/size_16</item>
        <item name="android:layout_marginBottom">@dimen/size_16</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/size_16</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/YPwhite</item>
        <item name="android:textColor">@color/YPblack</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YPblack</item>
        <item name="iconEndPadding">@dimen/size_8</item>
    </style>
    <!--Settings text menu left-->
    <style name="SettingMenuTetL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingVertical">@dimen/size_22</item>
        <item name="android:paddingLeft">@dimen/size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <!--Settings img.button right-->
    <style name="SettingMenuButtonR">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginVertical">@dimen/size_18</item>
        <item name="android:layout_marginEnd">@dimen/size_12</item>
        <item name="android:tint">?attr/colorSecondary</item>
    </style>
    <!--Back arrow button in title-->
    <style name="BackArrowButton">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:background">@null</item>
        <item name="android:tint">?attr/colorSecondaryVariant</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
    </style>
    <!--Title-->
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:paddingStart">@dimen/size_12</item>
        <item name="android:paddingTop">@dimen/size_10</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <!--Group name and track time-->
    <style name="ArtistNameTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
    <!--Search activity placeholder text-->
    <style name="SearchPlaceholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--Search activity placeholder image-->
    <style name="SearchPlaceholderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_102</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--Search activity placeholder button-->
    <style name="SearchPlaceholderButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>