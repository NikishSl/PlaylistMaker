<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginBottom="8dp">
        <ImageButton
            style="@style/BackArrowButton"
            android:id="@+id/search_back_button" />
        <TextView
            style="@style/Title"
            android:text="@string/search" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_search_text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/custom_search_input"
            android:drawableStart="@drawable/ic_search_16"
            android:drawableTint="?attr/colorOnSecondary"
            android:drawablePadding="10dp"
            android:paddingHorizontal="14dp"
            android:hint="@string/search"
            android:maxLength="50"
            android:maxLines="1"
            android:inputType="text"
            android:textCursorDrawable="@drawable/custom_search_cursor"
            android:textColorHint="?attr/colorOnSecondary"
            android:textSize="16sp"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"/>
        <ImageView
            android:id="@+id/clear_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center|end"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="?attr/colorOnSecondary"
            android:layout_marginEnd="26dp"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>