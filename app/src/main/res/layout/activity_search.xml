<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/size_4"
        android:layout_marginBottom="@dimen/size_8">
        <ImageButton
            style="@style/BackArrowButton"
            android:id="@+id/search_back_button" />
        <TextView
            style="@style/Title"
            android:text="@string/search" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_search_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_marginHorizontal="@dimen/size_16"
            android:background="@drawable/custom_search_input"
            android:drawableStart="@drawable/ic_search_16"
            android:drawableTint="?attr/colorOnSecondary"
            android:drawablePadding="@dimen/size_10"
            android:paddingHorizontal="@dimen/size_14"
            android:hint="@string/search"
            android:maxLines="1"
            android:inputType="text"
            android:textCursorDrawable="@drawable/custom_search_cursor"
            android:textColorHint="?attr/colorOnSecondary"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/YPblack"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/clear_icon"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:layout_gravity="center|end"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="?attr/colorOnSecondary"
            android:layout_marginEnd="@dimen/size_26"
            android:visibility="gone" />
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/search_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/search_history_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/search_history_tv"
            style="@style/SearchPlaceholderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you_find"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_42"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20">
        </androidx.recyclerview.widget.RecyclerView>
        <Button
            android:id="@+id/clear_history_button"
            style="@style/SearchPlaceholderButton"
            android:text="@string/clear_history"
            android:layout_marginTop="@dimen/size_24"
            android:textSize="@dimen/text_size_14"
            android:padding="@dimen/size_8"/>
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/search_frame_nothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/SearchPlaceholderImage"
            android:src="@drawable/ic_nothing"/>
        <TextView
            style="@style/SearchPlaceholderText"
            android:layout_marginTop="@dimen/size_238"
            android:text="@string/nothing_find"/>
    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/connect_trouble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/SearchPlaceholderImage"
            android:src="@drawable/ic_nconnect"/>
        <TextView
            style="@style/SearchPlaceholderText"
            android:layout_marginTop="@dimen/size_238"
            android:text="@string/connecting_trouble"/>
        <TextView
            style="@style/SearchPlaceholderText"
            android:layout_marginTop="@dimen/size_282"
            android:gravity="center"
            android:text="@string/try_again"/>
        <Button
            android:id="@+id/search_update_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:layout_gravity="center_horizontal"
            android:text="@string/update"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="@dimen/size_346"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/text_size_14"
            android:padding="@dimen/size_8"/>
    </FrameLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="@dimen/size_140"
        android:layout_width="@dimen/size_44"
        android:layout_height="@dimen/size_44"
        android:indeterminateTint="@color/YPBlue"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"/>
</LinearLayout>